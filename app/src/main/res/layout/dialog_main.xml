<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    tools:context="com.project.graduate.neartheplace.MainFragment.MainDialog">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <ImageView
            android:id="@+id/dialog_main_img"
            android:layout_marginTop="10dp"
            android:layout_width="120dp"
            android:layout_height="180dp"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/dialog_main_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="업체명"
                android:textSize="10pt"/>

            <TextView
                android:id="@+id/dialog_main_branch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="지점"
                android:textSize="7pt"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/dialog_main_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주소"
            android:textSize="6pt"
            android:layout_marginLeft="30dp"/>

        <TextView
            android:id="@+id/dialog_main_telephone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전화번호"
            android:textSize="6pt"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="일반 혜택"
            android:textSize="7pt"
            android:textColor="#FF8C00"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"/>

        <TextView
            android:id="@+id/dialog_main_KT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KT"
            android:textSize="6pt"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"/>

        <TextView
            android:id="@+id/dialog_main_SKT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SKT"
            android:textSize="6pt"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"/>

        <TextView
            android:id="@+id/dialog_main_LGU"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LGU"
            android:textSize="6pt"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="군인 혜택"
            android:textSize="7pt"
            android:textColor="#FF8C00"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"/>

        <TextView
            android:id="@+id/dialog_main_army"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="군인"
            android:textSize="6pt"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"/>


        <!--<fragment-->
            <!--android:id="@+id/dialog_main_map"-->
            <!--android:layout_gravity="center"-->
            <!--android:layout_marginTop="10dp"-->
            <!--android:name="com.google.android.gms.maps.SupportMapFragment"-->
            <!--android:layout_width="270dp"-->
            <!--android:layout_height="match_parent"-->
            <!--map:uiZoomControls="true"-->
            <!--map:uiZoomGestures="true"/>-->

        <Button
            android:id="@+id/dialog_main_cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="닫기"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"/>

    </LinearLayout>

    </ScrollView>

</LinearLayout>