<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    tools:context="com.project.graduate.neartheplace.MainFragment.MainDialog">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <ImageView
                android:id="@+id/dialog_main_img"
                android:layout_width="120dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dialog_main_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="업체명"
                    android:textSize="10pt" />

                <TextView
                    android:id="@+id/dialog_main_branch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="지점"
                    android:textSize="7pt" />

            </LinearLayout>

            <TextView
                android:id="@+id/dialog_main_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="주소"
                android:textSize="6pt" />

            <TextView
                android:id="@+id/dialog_main_telephone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:text="전화번호"
                android:textSize="6pt" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="15dp"
                android:text="일반 혜택"
                android:textColor="#FF8C00"
                android:textSize="7pt" />

            <TextView
                android:id="@+id/dialog_main_KT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:text="KT"
                android:textSize="6pt" />

            <TextView
                android:id="@+id/dialog_main_SKT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:text="SKT"
                android:textSize="6pt" />

            <TextView
                android:id="@+id/dialog_main_LGU"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:text="LGU"
                android:textSize="6pt" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="15dp"
                android:text="군인 혜택"
                android:textColor="#FF8C00"
                android:textSize="7pt" />

            <TextView
                android:id="@+id/dialog_main_army"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:text="군인"
                android:textSize="6pt" />


            <!--<fragment-->
            <!--android:id="@+id/dialog_main_map"-->
            <!--android:layout_gravity="center"-->
            <!--android:layout_marginTop="10dp"-->
            <!--android:name="com.google.android.gms.maps.SupportMapFragment"-->
            <!--android:layout_width="270dp"-->
            <!--android:layout_height="match_parent"-->
            <!--map:uiZoomControls="true"-->
            <!--map:uiZoomGestures="true"/>-->
            <!--<fragment-->
                <!--android:id="@+id/map"-->
                <!--android:name="com.google.android.gms.maps.SupportMapFragment"-->
                <!--android:layout_width="280dp"-->
                <!--android:layout_height="200dp"-->
                <!--android:layout_marginTop="10dp"-->
                <!--map:uiZoomControls="true"-->
                <!--map:uiZoomGestures="true" />-->

            <Button
                android:id="@+id/dialog_main_cancle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:text="닫기" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>